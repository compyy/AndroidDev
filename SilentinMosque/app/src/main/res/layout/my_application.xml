<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_application"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.silentinmosque.MainActivity">

    <TextView
        android:id="@+id/textCheckedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-condensed"
        android:text="You have Checked-in"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textMosque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textCheckedIn"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-condensed"
        android:text="MOSQUE UTHMAN, 1930, Zaventem, Belgium"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textSilent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textMosque"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Phone is in Silent Mode"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/atDATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSilent"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>